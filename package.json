{
  "name": "@capacitor-community/electron",
  "version": "3.0.0-1",
  "description": "Capacitor community support for the Electron platform.",
  "main": "dist/core/index.js",
  "typings": "dist/core/index.d.ts",
  "scripts": {
    "shipit": "npm run build && np --any-branch && npm run generate-changelog && npm run deploy-changelog",
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build-core && npm run build-rt && npm run build-platform-scripts",
    "capacitor:add": "node dist/platform-scripts/cap-scripts.js add",
    "capacitor:copy": "node dist/platform-scripts/cap-scripts.js copy",
    "capacitor:update": "node dist/platform-scripts/cap-scripts.js update",
    "capacitor:sync": "node dist/platform-scripts/cap-scripts.js sync",
    "capacitor:open": "node dist/platform-scripts/cap-scripts.js open",
    "build-platform-scripts": "npm run transpile-platform-scripts && npm run compile-platform-scripts && rimraf ./build",
    "compile-platform-scripts": "parcel build ./build/index.js --out-dir ./dist/platform-scripts --out-file cap-scripts.js --target node --no-source-maps",
    "transpile-platform-scripts": "tsc --project ./tsconfig.platform-scripts.json",
    "build-core": "tsc --project ./tsconfig.electron.json",
    "build-rt": "tsc --project ./tsconfig.rt.json",
    "generate-changelog": "conventional-changelog -o CHANGELOG.md -r 0 --config changelog.config.js",
    "deploy-changelog": "bash ./deployChangeLog.sh"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "author": "IT-MikeS",
  "devDependencies": {
    "@types/fs-extra": "^9.0.6",
    "@types/node": "^12.14.21",
    "conventional-changelog-cli": "^2.1.1",
    "conventional-changelog-conventionalcommits": "^4.5.0",
    "electron": "^11.2.0",
    "husky": "^4.3.0",
    "np": "^7.2.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.0",
    "prettier-plugin-java": "^0.8.3",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.1.3"
  },
  "dependencies": {
    "@capacitor/cli": "^3.0.0-beta.2",
    "@capacitor/core": "^3.0.0-beta.2",
    "@ionic/utils-fs": "^3.1.5",
    "chalk": "^4.1.0",
    "electron-is-dev": "^1.2.0",
    "electron-serve": "^1.0.0",
    "fs-extra": "^9.0.1",
    "mime-types": "~2.1.27",
    "ora": "^5.1.0"
  }
}
